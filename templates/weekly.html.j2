<!doctype html>
<html lang="da">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>TrendAgent Weekly ‚Äì Uge {{ week_label }}</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: -apple-system, system-ui, sans-serif; background: #f0f2f5; margin: 0; padding: 20px; color: #1c1e21; }
    .container { max-width: 1100px; margin: auto; background: white; padding: 30px; border-radius: 16px; box-shadow: 0 8px 24px rgba(0,0,0,0.08); }
    .header-flex { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 25px; }
    
    /* Portef√∏lje Score */
    .portfolio-score { padding: 15px 25px; border-radius: 12px; text-align: center; }
    .score-up { background: #e6f4ea; border: 2px solid #22c55e; color: #1e7e34; }
    .score-down { background: #fce8e6; border: 2px solid #ef4444; color: #d93025; }
    
    /* Alert Sektioner */
    .alert-grid { display: flex; gap: 20px; margin-bottom: 25px; }
    .alert-box { flex: 1; padding: 15px; border-radius: 10px; font-size: 14px; }
    .p-alert { background: #fffde7; border-left: 5px solid #fbc02d; } /* Gul for egne h√¶ndelser */
    .m-alert { background: #e3f2fd; border-left: 5px solid #2196f3; } /* Bl√• for nye muligheder */
    
    .chart-card { border: 1px solid #e4e6eb; border-radius: 12px; padding: 20px; margin-bottom: 25px; }
    .chart-container { height: 250px; }
    
    table { border-collapse: collapse; width: 100%; }
    th { text-align: left; padding: 12px; background: #f8f9fa; font-size: 12px; text-transform: uppercase; color: #65676b; }
    td { padding: 12px; border-bottom: 1px solid #ebedf0; font-size: 14px; }
    .active-row { background: #fffde7; font-weight: 500; }
    .badge { padding: 4px 10px; border-radius: 20px; font-weight: bold; font-size: 11px; }
    .b-up { background: #e6f4ea; color: #1e7e34; }
    .b-down { background: #fce8e6; color: #d93025; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header-flex">
      <div>
        <h1>üìà TrendAgent Weekly</h1>
        <p style="color:#65676b; margin:0;">Uge {{ week_label }} ‚Ä¢ Momentum-analyse</p>
      </div>
      <div class="portfolio-score {{ 'score-up' if avg_portfolio_return >= 0 else 'score-down' }}">
        <span style="font-size: 11px; text-transform: uppercase; font-weight: bold; display:block;">Ugens Afkast (‚≠ê)</span>
        <span style="font-size: 28px; font-weight: 800;">{{ '%.2f'|format(avg_portfolio_return) }}%</span>
      </div>
    </div>

    <div class="alert-grid">
      {% if portfolio_alerts %}
      <div class="alert-box p-alert">
        <h4 style="margin:0 0 10px 0;">‚≠ê Portef√∏lje H√¶ndelser</h4>
        {% for a in portfolio_alerts %}
          <div style="margin-bottom:5px;"><strong>{{ a.name }}</strong>: {{ a.msg }}</div>
        {% endfor %}
      </div>
      {% endif %}

      {% if market_opportunities %}
      <div class="alert-box m-alert">
        <h4 style="margin:0 0 10px 0;">üéØ Nye Markedsmuligheder</h4>
        <div style="display: flex; flex-wrap: wrap; gap: 5px;">
          {% for o in market_opportunities %}
            <span style="background:white; padding:2px 8px; border-radius:4px; border:1px solid #bbdefb; font-size:12px;">üöÄ {{ o.name }}</span>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>

    <div class="chart-card">
      <h4 style="margin:0 0 15px 0">Momentum Styrke p√• dine fonde</h4>
      <div class="chart-container">
        <canvas id="momentumChart"></canvas>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Fond</th>
          <th>Uge %</th>
          <th>Trend</th>
          <th>Momentum</th>
          <th>Drawdown</th>
        </tr>
      </thead>
      <tbody>
        {% for row in rows %}
        <tr class="{{ 'active-row' if row.is_active else '' }}">
          <td>{{ '‚≠ê' if row.is_active else '' }} {{ row.name[:45] }}</td>
          <td style="font-weight:bold; color: {{ '#1e7e34' if row.week_change_pct > 0 else '#d93025' }}">{{ '%.2f'|format(row.week_change_pct) }}%</td>
          <td><span class="badge {{ 'b-up' if row.trend_state == 'UP' else 'b-down' }}">{{ 'BULL' if row.trend_state == 'UP' else 'BEAR' }}</span></td>
          <td style="font-weight:600; color: {{ '#1e7e34' if row.momentum > 0 else '#d93025' }}">{{ row.momentum }}%</td>
          <td style="color:#d93025">{{ '%.2f'|format(row.drawdown) }}%</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <script>
    const ctx = document.getElementById('momentumChart').getContext('2d');
    const rawData = {{ chart_values | tojson }};
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: {{ chart_labels | tojson }},
        datasets: [{
          data: rawData,
          backgroundColor: rawData.map(v => v > 0 ? 'rgba(34, 197, 94, 0.7)' : 'rgba(239, 68, 68, 0.7)'),
          borderColor: rawData.map(v => v > 0 ? 'rgb(34, 197, 94)' : 'rgb(239, 68, 68)'),
          borderWidth: 1,
          borderRadius: 4
        }]
      },
      options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
    });
  </script>
</body>
</html>
