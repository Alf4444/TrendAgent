<!doctype html>
<html lang="da">
<head>
  <meta charset="utf-8">
  <title>TrendAgent Weekly</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: sans-serif; background: #f0f2f5; padding: 20px; }
    .container { max-width: 1000px; margin: auto; background: white; padding: 25px; border-radius: 12px; }
    .header { display: flex; justify-content: space-between; margin-bottom: 20px; }
    .score-box { border: 2px solid #22c55e; background: #e6f4ea; padding: 15px; border-radius: 8px; text-align: center; }
    .grid { display: flex; gap: 20px; margin-bottom: 20px; }
    .box { flex: 1; padding: 15px; border-radius: 8px; border: 1px solid #ddd; background: #fafafa; }
    .alert { background: #fffde7; border-left: 5px solid #fbc02d; padding: 10px; margin-bottom: 20px; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { padding: 10px; border-bottom: 1px solid #eee; text-align: left; font-size: 14px; }
    .active { background: #fffde7; font-weight: bold; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div>
        <h1>üìà TrendAgent Weekly</h1>
        <p>Uge {{ week_label }} ‚Ä¢ Slutdato {{ week_end_date }}</p>
      </div>
      <div class="score-box">
        <small>UGENS AFKAST (‚≠ê)</small><br>
        <strong style="font-size: 24px;">{{ '%.2f'|format(avg_portfolio_return) }}%</strong>
      </div>
    </div>

    {% if portfolio_alerts or market_opportunities %}
    <div class="alert">
      {% for a in portfolio_alerts %}<div><strong>‚≠ê {{ a.name }}</strong>: {{ a.msg }}</div>{% endfor %}
      {% if market_opportunities %}
        <div style="margin-top:10px;"><strong>üéØ Nye muligheder:</strong> 
        {% for o in market_opportunities %}{{ o.name }}{{ ", " if not loop.last }}{% endfor %}</div>
      {% endif %}
    </div>
    {% endif %}

    <div class="grid">
      <div class="box" style="border-top: 4px solid #22c55e;">
        <h4 style="margin:0 0 10px 0">üöÄ Ugens Top 5</h4>
        {% for t in top_up %}
          <div style="display:flex; justify-content:space-between; font-size:12px; margin-bottom:4px;">
            <span>{{ t.name[:30] }}</span> <strong>+{{ '%.2f'|format(t.week_change_pct) }}%</strong>
          </div>
        {% endfor %}
      </div>
      <div class="box" style="border-top: 4px solid #ef4444;">
        <h4 style="margin:0 0 10px 0">‚ö†Ô∏è Ugens Bund 5</h4>
        {% for t in top_down %}
          <div style="display:flex; justify-content:space-between; font-size:12px; margin-bottom:4px;">
            <span>{{ t.name[:30] }}</span> <strong>{{ '%.2f'|format(t.week_change_pct) }}%</strong>
          </div>
        {% endfor %}
      </div>
    </div>

    <table>
      <thead>
        <tr><th>Fond</th><th>Uge %</th><th>Trend</th><th>Momentum</th><th>√ÖTD</th></tr>
      </thead>
      <tbody>
        {% for row in rows %}
        <tr class="{{ 'active' if row.is_active else '' }}">
          <td>{{ '‚≠ê' if row.is_active else '' }} {{ row.name[:45] }}</td>
          <td style="color: {{ '#1e7e34' if row.week_change_pct > 0 else '#d93025' }}">{{ '%.2f'|format(row.week_change_pct) }}%</td>
          <td>{{ 'BULL' if row.trend_state == 'UP' else 'BEAR' }}</td>
          <td>{{ row.momentum }}%</td>
          <td>{{ '%.2f'|format(row.ytd_return) }}%</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</body>
</html>
