<!doctype html>
<html lang="da">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>TrendAgent Weekly ‚Äì Uge {{ week_label }}</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: -apple-system, system-ui, sans-serif; background: #f0f2f5; margin: 0; padding: 20px; color: #1c1e21; }
    .container { max-width: 1100px; margin: auto; background: white; padding: 30px; border-radius: 16px; box-shadow: 0 8px 24px rgba(0,0,0,0.08); }
    h1 { color: #1a73e8; margin-bottom: 5px; }
    .meta { color: #65676b; margin-bottom: 25px; font-size: 14px; }
    
    .chart-card { background: #ffffff; border: 1px solid #e4e6eb; border-radius: 12px; padding: 20px; margin-bottom: 25px; }
    .chart-container { height: 300px; position: relative; }
    
    /* Top 5 Sektion */
    .top-stats { display: flex; gap: 20px; margin-bottom: 30px; }
    .stat-box { flex: 1; padding: 15px; border-radius: 12px; border: 1px solid #e4e6eb; }
    .stat-box h3 { margin-top: 0; font-size: 16px; border-bottom: 1px solid #eee; padding-bottom: 10px; }
    .stat-item { display: flex; justify-content: space-between; font-size: 13px; margin-bottom: 8px; }

    table { border-collapse: collapse; width: 100%; }
    th { text-align: left; padding: 12px; background: #f8f9fa; color: #4b4b4b; font-size: 12px; text-transform: uppercase; }
    td { padding: 12px; border-bottom: 1px solid #ebedf0; font-size: 14px; }
    .active-row { background: #fffde7; }
    .badge { padding: 4px 10px; border-radius: 20px; font-weight: bold; font-size: 11px; }
    .b-up { background: #e6f4ea; color: #1e7e34; }
    .b-down { background: #fce8e6; color: #d93025; }
    .pos { color: #1e7e34; font-weight: bold; }
    .neg { color: #d93025; font-weight: bold; }
  </style>
</head>
<body>
  <div class="container">
    <h1>üìà TrendAgent Weekly</h1>
    <p class="meta">Uge {{ week_label }} ‚Ä¢ Slutdato {{ week_end_date }}</p>

    <div class="chart-card">
      <h3 style="margin-top:0">Portef√∏lje Momentum (Relativ styrke vs MA200)</h3>
      <div class="chart-container">
        <canvas id="momentumChart"></canvas>
      </div>
    </div>

    <div class="top-stats">
      <div class="stat-box" style="border-left: 4px solid #22c55e;">
        <h3>üöÄ Ugens Top 5 Vindere</h3>
        {% for t in top_up %}
        <div class="stat-item">
          <span>{{ t.name[:30] }}</span>
          <span class="pos">+{{ '%.2f'|format(t.week_change_pct) }}%</span>
        </div>
        {% endfor %}
      </div>
      <div class="stat-box" style="border-left: 4px solid #ef4444;">
        <h3>‚ö†Ô∏è Ugens Top 5 Tabere</h3>
        {% for t in top_down %}
        <div class="stat-item">
          <span>{{ t.name[:30] }}</span>
          <span class="neg">{{ '%.2f'|format(t.week_change_pct) }}%</span>
        </div>
        {% endfor %}
      </div>
    </div>

    <section>
      <h2>Fuld Markedsliste</h2>
      <table>
        <thead>
          <tr>
            <th>Investeringsfond</th>
            <th>Uge %</th>
            <th>Trend</th>
            <th>Momentum</th>
            <th>Drawdown</th>
          </tr>
        </thead>
        <tbody>
          {% for row in rows %}
          <tr class="{{ 'active-row' if row.is_active else '' }}">
            <td>
                {{ '‚≠ê' if row.is_active else '' }} <strong>{{ row.name[:45] }}</strong>
            </td>
            <td class="{{ 'pos' if row.week_change_pct > 0 else 'neg' }}">
                {{ '%.2f'|format(row.week_change_pct) }}%
            </td>
            <td>
                <span class="badge {{ 'b-up' if row.trend_state == 'UP' else 'b-down' }}">
                    {{ 'BULL' if row.trend_state == 'UP' else 'BEAR' }}
                </span>
            </td>
            <td style="font-weight: 600;">{{ row.momentum }}%</td>
            <td style="color:#d93025">{{ '%.2f'|format(row.drawdown) }}%</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </section>
  </div>

  <script>
    const ctx = document.getElementById('momentumChart').getContext('2d');
    const rawData = {{ chart_values | tojson }};
    
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: {{ chart_labels | tojson }},
        datasets: [{
          data: rawData,
          backgroundColor: rawData.map(v => v > 0 ? 'rgba(34, 197, 94, 0.7)' : 'rgba(239, 68, 68, 0.7)'),
          borderColor: rawData.map(v => v > 0 ? 'rgb(34, 197, 94)' : 'rgb(239, 68, 68)'),
          borderWidth: 1,
          borderRadius: 4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true } }
      }
    });
  </script>
</body>
</html>
