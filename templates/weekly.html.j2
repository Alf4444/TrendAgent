<!doctype html>
<html lang="da">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>TrendAgent Weekly ‚Äì Uge {{ week_label }}</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: -apple-system, system-ui, sans-serif; background: #f0f2f5; margin: 0; padding: 20px; color: #1c1e21; }
    .container { max-width: 1100px; margin: auto; background: white; padding: 30px; border-radius: 16px; box-shadow: 0 8px 24px rgba(0,0,0,0.08); }
    
    .header-flex { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px; }
    
    /* Portef√∏lje Score */
    .portfolio-score { padding: 20px; border-radius: 12px; text-align: center; min-width: 200px; }
    .score-up { background: #e6f4ea; border: 2px solid #22c55e; color: #1e7e34; }
    .score-down { background: #fce8e6; border: 2px solid #ef4444; color: #d93025; }
    .score-val { font-size: 32px; font-weight: 800; display: block; }
    
    .trend-alert { background: #fffde7; border-left: 5px solid #fbc02d; padding: 15px; border-radius: 8px; margin-bottom: 25px; }
    
    .chart-card { background: #ffffff; border: 1px solid #e4e6eb; border-radius: 12px; padding: 20px; margin-bottom: 25px; }
    .chart-container { height: 280px; position: relative; }
    
    .top-stats { display: flex; gap: 20px; margin-bottom: 30px; }
    .stat-box { flex: 1; padding: 15px; border-radius: 12px; border: 1px solid #e4e6eb; background: #fafafa; }
    
    table { border-collapse: collapse; width: 100%; }
    th { text-align: left; padding: 12px; background: #f8f9fa; font-size: 12px; text-transform: uppercase; }
    td { padding: 12px; border-bottom: 1px solid #ebedf0; font-size: 14px; }
    .active-row { background: #fffde7; font-weight: 500; }
    .badge { padding: 4px 10px; border-radius: 20px; font-weight: bold; font-size: 11px; }
    .b-up { background: #e6f4ea; color: #1e7e34; }
    .b-down { background: #fce8e6; color: #d93025; }
    .pos { color: #1e7e34; font-weight: bold; }
    .neg { color: #d93025; font-weight: bold; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header-flex">
      <div>
        <h1>üìà TrendAgent Weekly</h1>
        <p style="color:#65676b">Uge {{ week_label }} ‚Ä¢ Slutdato {{ week_end_date }}</p>
      </div>
      
      <div class="portfolio-score {{ 'score-up' if avg_portfolio_return >= 0 else 'score-down' }}">
        <span style="font-size: 12px; text-transform: uppercase; font-weight: bold;">Portef√∏lje i ugen</span>
        <span class="score-val">{{ '%.2f'|format(avg_portfolio_return) }}%</span>
      </div>
    </div>

    {% if trend_changes %}
    <div class="trend-alert">
      <h3 style="margin:0 0 10px 0">üîÑ Trend-skift detekteret:</h3>
      {% for change in trend_changes %}
        <div>{{ change.icon }} <strong>{{ change.name }}</strong> er nu i <strong>{{ 'BULL' if change.type == 'BULL' else 'BEAR' }}</strong> marked.</div>
      {% endfor %}
    </div>
    {% endif %}

    <div class="chart-card">
      <h3 style="margin-top:0">Momentum Styrke (MA200 Afstand)</h3>
      <div class="chart-container">
        <canvas id="momentumChart"></canvas>
      </div>
    </div>

    <div class="top-stats">
      <div class="stat-box" style="border-top: 4px solid #22c55e;">
        <h4 style="margin:0 0 10px 0">üöÄ Ugens Top 5</h4>
        {% for t in top_up %}
          <div style="display:flex; justify-content:space-between; font-size:12px; margin-bottom:5px;">
            <span>{{ t.name[:25] }}</span> <span class="pos">+{{ '%.2f'|format(t.week_change_pct) }}%</span>
          </div>
        {% endfor %}
      </div>
      <div class="stat-box" style="border-top: 4px solid #ef4444;">
        <h4 style="margin:0 0 10px 0">‚ö†Ô∏è Ugens Bund 5</h4>
        {% for t in top_down %}
          <div style="display:flex; justify-content:space-between; font-size:12px; margin-bottom:5px;">
            <span>{{ t.name[:25] }}</span> <span class="neg">{{ '%.2f'|format(t.week_change_pct) }}%</span>
          </div>
        {% endfor %}
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Investeringsfond</th>
          <th>Uge %</th>
          <th>Trend</th>
          <th>Momentum</th>
          <th>√ÖTD</th>
          <th>Drawdown</th>
        </tr>
      </thead>
      <tbody>
        {% for row in rows %}
        <tr class="{{ 'active-row' if row.is_active else '' }}">
          <td>{{ '‚≠ê' if row.is_active else '' }} {{ row.name[:40] }}</td>
          <td class="{{ 'pos' if row.week_change_pct > 0 else 'neg' }}">{{ '%.2f'|format(row.week_change_pct) }}%</td>
          <td><span class="badge {{ 'b-up' if row.trend_state == 'UP' else 'b-down' }}">{{ 'BULL' if row.trend_state == 'UP' else 'BEAR' }}</span></td>
          <td style="font-weight:600; color: {{ '#1e7e34' if row.momentum > 0 else '#d93025' }}">{{ row.momentum }}%</td>
          <td>{{ '%.2f'|format(row.ytd_return) }}%</td>
          <td style="color:#d93025">{{ '%.2f'|format(row.drawdown) }}%</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <script>
    const ctx = document.getElementById('momentumChart').getContext('2d');
    const rawData = {{ chart_values | tojson }};
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: {{ chart_labels | tojson }},
        datasets: [{
          data: rawData,
          backgroundColor: rawData.map(v => v > 0 ? 'rgba(34, 197, 94, 0.7)' : 'rgba(239, 68, 68, 0.7)'),
          borderColor: rawData.map(v => v > 0 ? 'rgb(34, 197, 94)' : 'rgb(239, 68, 68)'),
          borderWidth: 1,
          borderRadius: 4
        }]
      },
      options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
    });
  </script>
</body>
</html>
