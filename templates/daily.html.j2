name: Daily Report (Mock)

on:
  workflow_dispatch: {}
  # Senere kan du tidsstyre:
  # schedule:
  #   - cron: "0 5 * * 1-5"  # hverdage kl. 05:00 UTC

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      # (valgfrit) debug for at se repo-structure i runner
      - name: Debug - list files
        run: |
          echo "PWD=$(pwd)"
          ls -la
          echo "---- data ----"
          ls -la data || true
          echo "---- templates ----"
          ls -la templates || true
          echo "---- parser ----"
          ls -la parser || true
          echo "---- reporting ----"
          ls -la reporting || true

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install requirements
        run: |
          python -m pip install --upgrade pip setuptools wheel
          pip install -r requirements.txt

      - name: Generate latest.json (mock)
        run: |
          python parser/parse_pfa.py --out latest.json --mock

      - name: Build daily HTML
        run: |
          python reporting/build_report.py --kind daily --data latest.json --template templates/daily.html.j2 --out build/daily.html

      - name: Upload artifact (daily)
        uses: actions/upload-artifact@v4
        with:
          name: trendagent-daily
          path: build/daily.html
          if-no-files-found: error
